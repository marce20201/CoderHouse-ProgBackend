doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title Entregable 11
    body 
        div(class="container")
            h1 Agregar Producto 
            hr
            form(action="/api/productos", method="post")
                label(for="nombre") Nombre 
                input(type="text", name="nombre",class="form-control",placeholder="Escribe aqui...")
                label(for="precio") Precio 
                input(type="number", name="precio",class="form-control",placeholder="Escribe aqui...")
                label(for="foto") URL a imagen 
                input(type="text", name="foto",class="form-control",placeholder="Escribe aqui...")
                button(type="submit",class="btn btn-success") Agregar 